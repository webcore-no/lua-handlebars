	local helpers = require("lib/luabars/helpers.lua")
	local inline_helpers = require("lib/luabars/inline_helpers.lua")
	return {
		print_bultin = function()
			local ret = ""
			for k,_ in pairs(helpers)
				ret = k .. '\n'
			end
			for k,_ in pairs(inline_helpers)
				ret = k .. '\n'
			end
		end
	}
