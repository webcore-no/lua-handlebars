## Builtin helpers
{{ helpers "
	local helpers = require('lib/luabars/helpers')
	local unsafe_helpers = require('lib/luabars/unsafe_helpers')
	local inline_helpers = require('lib/luabars/inline_helpers')
	local unsafe_inline_helpers = require('lib/luabars/unsafe_inline_helpers')
	return {
		print_bultin = function()
			local ret = '## Helpers\n'
			for k,_ in pairs(helpers) do
				ret = ret .. ' - ' .. k .. '\n'
			end

			ret = ret .. '### Unsafe\n'
			for k,_ in pairs(unsafe_helpers) do
				ret = ret .. ' - ' .. k .. '\n'
			end
			ret = ret .. '### Inline\n'
			for k,_ in pairs(inline_helpers) do
				ret = ret .. ' - ' .. k .. '\n'
			end
			ret = ret .. '### Inline unsafe\n'
			for k,_ in pairs(unsafe_inline_helpers) do
				ret = ret .. ' - ' .. k .. '\n'
			end
			return ret
		end
	}
"}}
